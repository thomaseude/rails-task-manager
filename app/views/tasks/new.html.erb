<h1>Form Add Task</h1>

<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
</div>
<div class="form-group">
  <%= f.label :completed %>
  <%= f.text_field :completed %>
</div>
<div class = "btn btn-primary">
  <%= f.submit %>
</div>
<% end %>
